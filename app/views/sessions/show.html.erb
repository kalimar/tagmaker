<div class="page-header">
  <h2>This is where you will see the snippet and a little bit of each promo_code</h2>
</div>

<div class="well">
  URL	MMC	Department	Channel	Program	Prefix	Friendly_Name	Reporting_Channel</br>
  <% @promo_codes.each do |promo_code| %>
    <%= promo_code.mmc_code %></br>
  <% end %>
</div>


<% @promo_codes.each do |promo_code| %>
  <div class="row">
    <legend>Promo Code</legend>
    <div class="col-sm-4"><%= promo_code.friendly_name %></div>
  <% if promo_code.pc_appended_url %>
    <div class="col-sm-4"><%= promo_code.pc_appended_url %></div>
  <% else %>
    <%= form_for(promo_code, html: { class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <%= f.text_field :pc_appended_url, placeholder: "Paste in PC appended URL", class: "form-control" %>
      </div>
      <div class="row">
        <%= f.submit('Update Promocode', class: 'btn btn-primary') %>
      </div>
  <% end %>
<% end %>
</div>
<% end %>
